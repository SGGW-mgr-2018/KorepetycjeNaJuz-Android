<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SigninFragment"
    android:background="@color/colorBackground">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/fragment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_signin"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextLabels"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:id="@+id/firstname_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:hint="@string/hint_name"
        android:inputType="text"
        android:autofillHints="name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:layout_below="@id/fragment_label"/>

    <EditText
        android:id="@+id/lastname_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:hint="@string/hint_sname"
        android:inputType="text"
        android:autofillHints="name"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/firstname_edit"/>

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:autofillHints="email"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lastname_edit"/>

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:hint="@string/hint_pass"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/email_edit"/>

    <TextView
        android:id="@+id/reg_claim_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_register_claim"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/password_edit"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/signin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_signin"
        android:textAllCaps="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_below="@id/reg_claim_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ripple_default_round"
        android:textColor="@color/colorTextButton"
        android:layout_marginTop="16dp"/>

</RelativeLayout>