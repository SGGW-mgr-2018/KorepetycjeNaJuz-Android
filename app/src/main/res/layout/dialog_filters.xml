<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <View
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/levels_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poziomy"
        android:layout_alignStart="@id/levels_box"/>
    <LinearLayout
        android:id="@+id/levels_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/center"
        android:orientation="vertical"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/levels_label">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podstawowy"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liceum"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Studia"/>
    </LinearLayout>

    <TextView
        android:id="@+id/subjects_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Przedmioty"
        android:layout_alignStart="@id/subjects_box"/>
    <LinearLayout
        android:id="@+id/subjects_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/center"
        android:layout_marginStart="8dp"
        android:layout_below="@id/subjects_label">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matematyka"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Polski"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historia"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biologia"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fizyka"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chemia"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WOS"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PPOMy"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rate_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subjects_box"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cena"
            android:textSize="18sp"
            android:layout_marginEnd="32dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="od"
            android:layout_marginEnd="12dp"/>
        <EditText
            android:id="@+id/rate_btm_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:hint="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="zł do"
            android:layout_marginEnd="8dp"/>
        <EditText
            android:id="@+id/rate_top_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:textAlignment="center"
            android:hint="100"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="zł"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rate_box"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W ciągu"
            android:textSize="18sp"
            android:layout_marginEnd="32dp"/>
        <EditText
            android:id="@+id/time_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:textAlignment="center"
            android:hint="12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="h"
            android:textSize="18sp"/>
    </LinearLayout>


</RelativeLayout>