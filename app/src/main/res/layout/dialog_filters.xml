<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/levels_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poziomy"
            android:layout_alignStart="@id/levels_radio_group"/>
        <RadioGroup
            android:id="@+id/levels_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/center"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/levels_label">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wszystkie"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Podstawowy"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Podstawowy"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liceum"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studia"/>
        </RadioGroup>

        <TextView
            android:id="@+id/subjects_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Przedmioty"
            android:layout_alignStart="@id/subjects_radio_group"/>
        <RadioGroup
            android:id="@+id/subjects_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/center"
            android:layout_marginStart="8dp"
            android:layout_below="@id/subjects_label"/>

        <LinearLayout
            android:id="@+id/rate_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subjects_radio_group"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cena"
                android:textSize="18sp"
                android:layout_marginEnd="32dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="od"
                android:layout_marginEnd="12dp"/>
            <EditText
                android:id="@+id/rate_btm_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:hint="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="zł do"
                android:layout_marginEnd="8dp"/>
            <EditText
                android:id="@+id/rate_top_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:textAlignment="center"
                android:hint="100"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="zł"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>