<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/with_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pan Twardowski"
        android:textSize="20sp"
        android:textColor="@color/colorTextLabels"/>

    <TextView
        android:id="@+id/last_msg_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/01/2019 12:14"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/last_msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cześć Dawid. Jutro tak jak ustaliliśmy?"
        android:layout_marginStart="8dp"/>

</LinearLayout>