<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/coach_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Janusz Admin"
        android:textColor="@color/colorTextLabels"
        android:textSize="20sp"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:id="@+id/rating_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_width="@dimen/lesson_description_star_size"
            android:layout_height="@dimen/lesson_description_star_size"
            android:src="@drawable/star_empty" />
        <ImageView
            android:layout_width="@dimen/lesson_description_star_size"
            android:layout_height="@dimen/lesson_description_star_size"
            android:src="@drawable/star_empty" />
        <ImageView
            android:layout_width="@dimen/lesson_description_star_size"
            android:layout_height="@dimen/lesson_description_star_size"
            android:src="@drawable/star_empty" />
        <ImageView
            android:layout_width="@dimen/lesson_description_star_size"
            android:layout_height="@dimen/lesson_description_star_size"
            android:src="@drawable/star_empty" />
        <ImageView
            android:layout_width="@dimen/lesson_description_star_size"
            android:layout_height="@dimen/lesson_description_star_size"
            android:src="@drawable/star_empty" />
    </LinearLayout>

    <TextView
        android:id="@+id/subject_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextDark"
        android:textSize="16sp"
        android:layout_below="@id/coach_name_text"
        android:text="Przedmiot"/>
    <TextView
        android:id="@+id/level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorTextLight"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/subject_text"
        android:text="Poziom1, poziom 2"/>

    <TextView
        android:id="@+id/start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLight"
        android:textSize="16sp"
        android:layout_below="@id/level_text"
        android:text="12.01.2019 15:00"/>
    <TextView
        android:id="@+id/end_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLight"
        android:textSize="16sp"
        android:layout_below="@id/start_text"
        android:text="12.01.2019 16:00"/>

    <TextView
        android:id="@+id/rateph_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLight"
        android:textSize="16sp"
        android:layout_below="@id/level_text"
        android:layout_alignParentEnd="true"
        android:text="12 zÅ‚/h"/>
    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLight"
        android:textSize="16sp"
        android:layout_below="@id/rateph_text"
        android:layout_alignParentEnd="true"
        android:text="2h"/>

    <TextView
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLight"
        android:textSize="16sp"
        android:layout_below="@id/end_text"
        android:layout_marginTop="12dp"
        android:text="Lorem ipsum dolor sit amet neque. Cras non orci. Cum sociis natoque penatibus et ultrices sit amet, nonummy enim quis faucibus orci luctus eget, nulla. Proin quis lorem scelerisque sem."/>

</RelativeLayout>