<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AccountFragment"
    android:background="@color/colorBackground">

    <LinearLayout
        android:id="@+id/img_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/fragment_label"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fragment_label"
            android:src="@drawable/marysia"
            android:layout_weight="4"
            android:layout_marginEnd="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_name"
                android:layout_marginBottom="@dimen/label_to_value_space"
                android:textSize="@dimen/default_text_size"/>
            <TextView
                android:id="@+id/name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_label"
                android:text=""
                android:layout_marginBottom="@dimen/field_to_field_space"
                android:textStyle="bold"
                android:textSize="@dimen/default_text_size"/>
            <TextView
                android:id="@+id/sname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sname"
                android:layout_below="@id/name_value"
                android:layout_marginBottom="@dimen/label_to_value_space"
                android:textSize="@dimen/default_text_size"/>
            <TextView
                android:id="@+id/sname_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sname_label"
                android:text=""
                android:textStyle="bold"
                android:textSize="@dimen/default_text_size"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/email_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_box"
        android:text="@string/label_email"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="@dimen/field_to_field_space"
        android:layout_marginBottom="@dimen/label_to_value_space"
        android:textSize="@dimen/default_text_size"/>
    <TextView
        android:id="@+id/email_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_label"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/field_to_field_space"
        android:text=""
        android:textStyle="bold"
        android:textSize="@dimen/default_text_size"/>

    <LinearLayout
        android:id="@+id/show_data_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/email_value"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_phone_no"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/label_to_value_space"
            android:textSize="@dimen/default_text_size"/>
        <TextView
            android:id="@+id/phone_no_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/field_to_field_space"
            android:text=""
            android:textStyle="bold"
            android:textSize="@dimen/default_text_size"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_about_me"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/label_to_value_space"
            android:textSize="@dimen/default_text_size"/>
        <TextView
            android:id="@+id/about_me_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            android:textSize="@dimen/default_text_size"
            android:text=""/>

        <Button
            android:id="@+id/change_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edit_side_margin"
            android:layout_marginEnd="@dimen/edit_side_margin"
            android:layout_marginTop="@dimen/field_to_field_space"
            android:text="@string/button_change_account"
            android:textAllCaps="false"
            android:background="@drawable/ripple_default_round"
            android:textColor="@color/colorTextButton"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/edit_data_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/email_value"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_phone_no"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/label_to_edit_space"
            android:textSize="@dimen/default_text_size"/>
        <EditText
            android:id="@+id/phone_no_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/field_to_field_space"
            android:inputType="phone"
            android:textStyle="bold"
            android:textSize="@dimen/default_text_size"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_about_me"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/label_to_edit_space"
            android:textSize="@dimen/default_text_size"/>
        <EditText
            android:id="@+id/about_me_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            android:textSize="@dimen/default_text_size"
            android:inputType="textMultiLine"
            android:layout_marginBottom="@dimen/field_to_field_space" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_password"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/label_to_edit_space"
            android:textSize="@dimen/default_text_size"/>
        <EditText
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            android:textSize="@dimen/default_text_size"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_save"
            android:textAllCaps="false"
            android:layout_marginEnd="@dimen/edit_side_margin"
            android:layout_marginStart="@dimen/edit_side_margin"
            android:background="@drawable/ripple_default_round"
            android:textColor="@color/colorTextButton"/>
    </LinearLayout>

</RelativeLayout>